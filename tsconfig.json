{
  "include": ["src/**/*"],
  "exclude": [
		"src/**/*.test.ts",
		"src/**/*.spec.ts",
		"src/**/*.test.js",
		"src/**/*.spec.js"
	],
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "build",
    "experimentalDecorators": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true
  }
}